<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
        <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
   <!-- Servlet para manejar la subida de archivos -->
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>servlets.FileUploadServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <!-- Servlet para registrar un nuevo usuario -->
    <servlet>
        <servlet-name>NUser</servlet-name>
        <servlet-class>servlets.NUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NUser</servlet-name>
        <url-pattern>/nuser</url-pattern>
    </servlet-mapping>
    
        <servlet>
        <servlet-name>FileListServlet</servlet-name>
        <servlet-class>servlets.FileListServlet</servlet-class>
         </servlet>
    <servlet-mapping>
        <servlet-name>FileListServlet</servlet-name>
        <url-pattern>/files</url-pattern>
    </servlet-mapping>
    
    <servlet>
    <servlet-name>UpdateFileServlet</servlet-name>
    <servlet-class>servlets.UpdateFileServlet</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateFileServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    
    <servlet>
    <servlet-name>DeleteFileServlet</servlet-name>
    <servlet-class>servlets.DeleteFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFileServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    
        <!-- ConfiguraciÃ³n para manejo de archivos multipart -->
    <context-param>
        <param-name>maxFileSize</param-name>
        <param-value>10485760</param-value> <!-- 10MB en bytes -->
    </context-param>

    <context-param>
        <param-name>maxRequestSize</param-name>
        <param-value>15728640</param-value> <!-- 15MB en bytes -->
    </context-param>

    <context-param>
        <param-name>fileSizeThreshold</param-name>
        <param-value>1048576</param-value> <!-- 1MB en bytes -->
    </context-param>
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
</web-app>
